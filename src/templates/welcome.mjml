<mjml>
    <mj-head>
        <mj-preview>Congratulations {first_name}</mj-preview>
    </mj-head>
    <mj-body background-color="#F2F5F8">
        <mj-section padding="4% 0 0 0">
            <mj-column padding-left="6%">
                <mj-image width="100px"
                          src="https://res.cloudinary.com/dpgdjfckl/image/upload/v1632944736/genbank/logo_cd32l6.png"
                          align="left" padding-bottom="3.5%"/>
            </mj-column>
        </mj-section>
        <mj-section padding="0 4% 0 4%">
            <mj-column background-color="white" padding="4%">
                <mj-text padding-bottom="3.5%" color="#011B49" font-size="11.8%" font-family="Plex-Hebrew-Semibold" line-height="1.5">
                    Congratulations {first_name}ðŸŽ‰
                </mj-text>
                <mj-text padding-bottom="1.8%" color="#000E25" font-size="3.6%" font-family="Plex-Hebrew">
